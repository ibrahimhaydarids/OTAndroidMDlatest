<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners
                android:radius="@dimen/mini_radius"  />

            <stroke android:width="1dip" android:color="?attr/evenColor" />
            <gradient android:angle="-90" android:startColor="?attr/evenColor"
                android:endColor="?attr/evenColor"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:radius="@dimen/mini_radius" />
            <stroke android:width="1dip" android:color="?attr/evenColor" />
            <solid android:color="?attr/evenColor"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="@dimen/mini_radius" />
            <stroke android:width="1dip" android:color="?attr/evenColor" />
            <solid android:color="?attr/evenColor"/>
        </shape>
    </item>
</selector>