<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <!-- outer square -->
        <shape
            android:width="35dp"
            android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="?attr/colorLight" />

            <solid android:color="@android:color/transparent" />
            <corners android:radius="10dp" />
        <!--    <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />-->
        </shape>

    </item>
    <item><!-- inner square -->
        <shape
            android:width="35dp"
            android:shape="rectangle">
            <solid android:color="?attr/colorLight" />

            <stroke
                android:width="1dp"
                android:color="?attr/colorDark" />

            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>