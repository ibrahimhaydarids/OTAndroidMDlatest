<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners
                android:radius="@dimen/small_radius"  />

            <stroke android:width="1dip" android:color="@color/header_color_4" />
            <gradient android:angle="-90" android:startColor="@color/header_color_4"
                android:endColor="@color/header_color_4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:radius="@dimen/small_radius" />
            <stroke android:width="1dip" android:color="@color/header_color_4" />
            <solid android:color="@color/header_color_4"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="@dimen/small_radius" />
            <stroke android:width="1dip" android:color="@color/header_color_4" />
            <solid android:color="@color/header_color_4"/>
        </shape>
    </item>
</selector>