<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="@dimen/mini_radius"
                android:topRightRadius="@dimen/mini_radius"

                />

            <stroke android:width="1dip" android:color="?attr/colorDarkHeader" />
            <gradient android:angle="-90" android:startColor="?attr/colorDarkHeader"
                android:endColor="?attr/colorDarkHeader"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="@dimen/mini_radius"
                android:topRightRadius="@dimen/mini_radius"
                />
            <stroke android:width="1dip" android:color="?attr/colorDarkHeader" />
            <solid android:color="?attr/colorDarkHeader"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="@dimen/mini_radius"
                android:topRightRadius="@dimen/mini_radius"

                />
            <stroke android:width="1dip" android:color="?attr/colorDarkHeader" />
            <gradient android:angle="-90" android:startColor="?attr/colorDarkHeader" android:endColor="?attr/colorDarkHeader" />
        </shape>
    </item>
</selector>