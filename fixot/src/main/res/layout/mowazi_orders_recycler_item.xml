<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvCompanyItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="3dp"
        android:layout_weight=".9"
        android:clickable="true"
        android:gravity="start|center_horizontal"
        android:maxLines="2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/mowazi_company"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/tvOrderAskItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5"
        android:gravity="end|center_horizontal"
        android:padding="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/mowazi_orderAsk"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/tvOrderPriceItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.9"
        android:gravity="end|center_horizontal"
        android:padding="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/price"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/tvOrderQuantityItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.9"
        android:gravity="end|center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/mowazi_orderedQuantity"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/tvOfferQuantityItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.4"
        android:gravity="end|center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/mowazi_offeredQuantity"
        android:textSize="@dimen/small"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvOrderBidItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="0.8"
        android:gravity="end|center_horizontal"
        android:paddingTop="5dp"

        android:paddingBottom="5dp"
        android:text="@string/mowazi_orderBid"
        android:textSize="@dimen/small"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvCompanyOrderBook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.1"
        android:clickable="true"
        android:gravity="start"
        android:text="...."
        android:textSize="@dimen/small"
        android:visibility="gone" />

</LinearLayout>