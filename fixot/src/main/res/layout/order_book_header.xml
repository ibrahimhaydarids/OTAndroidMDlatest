<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorMedium"
    android:minHeight="@dimen/header_height"
    android:orientation="horizontal"
    android:padding="4dp">

    <TextView
        android:id="@+id/tvAskNumberHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:text="@string/diaz"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"

            android:gravity="center"
            android:padding="4dp"
            android:text="@string/bid"
            android:id="@+id/tvBidHeader"
            android:textColor="?attr/colorValues"
            android:textSize="@dimen/small" />

        <TextView
            android:id="@+id/tvTimeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:gravity="center_horizontal"
            android:padding="4dp"
            android:text="@string/quantity"
            android:textColor="?attr/colorValues"
            android:textSize="@dimen/small" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvPriceHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:text="@string/price"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tvAskHeader"

            android:gravity="center_horizontal"
            android:padding="4dp"
            android:text="@string/ask"
            android:textColor="?attr/colorValues"
            android:textSize="@dimen/small" />
        <TextView
            android:id="@+id/tvBidQtyHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/quantity"
            android:textColor="?attr/colorValues"
            android:textSize="@dimen/small" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvBidNumberHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:text="@string/diaz"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />
</LinearLayout>