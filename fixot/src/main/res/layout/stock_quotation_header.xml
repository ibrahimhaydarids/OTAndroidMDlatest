<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="?attr/colorMedium"
    android:clipToPadding="false"
    android:gravity="center_vertical"
    android:id="@+id/linearStockQuotationHeader"
    android:orientation="horizontal">
    <!--android:padding="0dp"-->

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="@dimen/trades_button_width"
        android:layout_height="@dimen/trades_button_height"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/mini_margin"
        android:background="@drawable/tradebuttondrawable"
        android:onClick="searchStocks"
        android:scaleType="fitCenter"
        android:src="@drawable/sectors"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="0.95"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvStock"
            style="@style/textStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:padding="@dimen/mini_padding"
            android:text="@string/stock_name_title"
            android:textColor="?attr/colorValues" />

        <TextView
            android:id="@+id/tvSessionName"
            style="@style/textStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:padding="@dimen/mini_padding"
            android:text="@string/session_title"
            android:textColor="?attr/colorValues" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvPrice"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.26"
        android:gravity="center_horizontal"
        android:padding="@dimen/mini_padding"
        android:text="@string/price_title"
        android:textColor="?attr/colorValues" />

    <TextView
        android:id="@+id/tvChange"
        style="@style/textStyle"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="0.26"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/mini_padding"
        android:paddingBottom="@dimen/mini_padding"
        android:text="@string/change_title"
        android:textColor="?attr/colorValues" />
    <!--android:layout_weight="0.29"-->


</LinearLayout>