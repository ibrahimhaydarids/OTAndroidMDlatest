<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llPopup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDark"
        android:gravity="end"
        android:onClick="close"
        android:padding="5dp"
        android:paddingEnd="10dp"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="true"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/hi_limit"
                        android:textColor="@color/colorValues" />

                    <TextView
                        android:id="@+id/tvHighLimitValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/hi_limit"
                        android:textColor="@color/colorValues" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/high"
                        android:textColor="@color/colorValues" />

                    <TextView
                        android:id="@+id/tvHighValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/high"
                        android:textColor="@color/colorValues" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/is_islamic"
                        android:textColor="@color/colorValues" />

                    <TextView
                        android:id="@+id/tvIsIslamicValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/is_islamic"
                        android:textColor="@color/colorValues" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/last"
                        android:textColor="@color/colorValues" />


                    <TextView
                        android:id="@+id/tvLastValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/last"
                        android:textColor="@color/colorValues" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/low"
                        android:textColor="@color/colorValues" />

                    <TextView
                        android:id="@+id/tvLowValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/low"
                        android:textColor="@color/colorValues" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/low_limit"
                        android:textColor="@color/colorValues" />


                    <TextView
                        android:id="@+id/tvLowLimitValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/low_limit"
                        android:textColor="@color/colorValues" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/open"
                        android:textColor="@color/colorValues" />

                    <TextView
                        android:id="@+id/tvOpenValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/open"
                        android:textColor="@color/colorValues" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/stock_id"
                        android:textColor="@color/colorValues" />

                    <TextView
                        android:id="@+id/tvStockIdValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/stock_id"
                        android:textColor="@color/colorValues" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/stock_trading_status"
                        android:textColor="@color/colorValues" />

                    <TextView
                        android:id="@+id/tvStockTradingStatusValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/stock_trading_status"
                        android:textColor="@color/colorValues" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/trades"
                        android:textColor="@color/colorValues" />

                    <TextView
                        android:id="@+id/tvTradesValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/trades"
                        android:textColor="@color/colorValues" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/volume"
                        android:textColor="@color/colorValues" />

                    <TextView
                        android:id="@+id/tvVolumeValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/volume"
                        android:textColor="@color/colorValues" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/volume_ask"
                        android:textColor="@color/colorValues" />

                    <TextView
                        android:id="@+id/tvVolumeAskValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/volume_ask"
                        android:textColor="@color/colorValues" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/open"
                        android:textColor="@color/colorValues" />

                    <TextView
                        android:id="@+id/tvVolumeBidValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/volume_bid"
                        android:textColor="@color/colorValues" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>