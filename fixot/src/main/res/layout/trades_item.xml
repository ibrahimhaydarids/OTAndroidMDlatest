<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llItem"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/timesales_light_row"
    android:orientation="horizontal"
    android:padding="4dp"
    android:weightSum="7">

    <TextView
        android:id="@+id/tvStockItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1.9"
        android:padding="4dp"
        android:text="@string/stock_id"
        android:textColor="@color/colorDark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvPriceItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:padding="4dp"
        android:text="@string/price"
        android:textColor="@color/colorDark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvQuantityItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:padding="4dp"
        android:text="@string/quantity"
        android:textColor="@color/colorDark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvChangeItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:padding="4dp"
        android:text="@string/change"
        android:textColor="@color/colorDark"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/logo" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTimeItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1.1"
        android:padding="4dp"
        android:text="@string/time_sales"
        android:textColor="@color/colorDark"
        android:textSize="12sp" />
</LinearLayout>