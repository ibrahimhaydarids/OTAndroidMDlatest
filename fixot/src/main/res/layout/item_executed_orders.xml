<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/evenColor"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingTop="1dp"
    android:paddingRight="4dp"
    android:paddingBottom="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvSymbolValue"
            style="@style/textListHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/mini_padding"
            android:text="QNBK"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorValues" />

        <TextView
            android:id="@+id/tvActionValue"
            style="@style/textListHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:gravity="center_horizontal"
            android:padding="@dimen/mini_padding"
            android:text="Buy"
            android:textColor="?attr/colorValues" />

        <TextView
            android:id="@+id/tvQtyExecutedValue"
            style="@style/textListHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.2"
            android:gravity="center_horizontal"
            android:padding="@dimen/mini_padding"
            android:text="199"
            android:textColor="?attr/colorValues"
            />

        <TextView
            android:id="@+id/tvAvgPriceValue"
            style="@style/textListHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/mini_padding"
            android:text="970"
            android:textColor="?attr/colorValues" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/gray"
        tools:ignore="Suspicious0dp" />



</LinearLayout>