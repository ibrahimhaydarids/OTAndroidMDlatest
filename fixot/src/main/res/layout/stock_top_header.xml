<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMedium"
    android:orientation="horizontal"
    android:padding="4dp">

    <TextView
        android:id="@+id/tvSymbolHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:padding="4dp"
        android:text="@string/symbol"
        android:textColor="@color/colorValues"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvAmountHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:padding="4dp"
        android:text="@string/amount"
        android:textColor="@color/colorValues"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvChangeHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:padding="4dp"
        android:text="@string/change"
        android:textColor="@color/colorValues"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvChangePercentHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:padding="4dp"
        android:text="@string/change_percent"
        android:textColor="@color/colorValues"
        android:textSize="12sp" />

</LinearLayout>