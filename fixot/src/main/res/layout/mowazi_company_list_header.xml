<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mowazi_colorPrimaryDark"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llsymbol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:clickable="true"
        android:padding="@dimen/mini_padding">

        <TextView
            android:id="@+id/namesymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="0.7"
            android:gravity="start|center_horizontal"
            android:text="@string/mowazi_namesymbol"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small" />

        <ImageView
            android:id="@+id/ivsymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/updownempty"
            android:tag="desc"
            android:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llmodification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.9"
        android:clickable="true">

        <TextView
            android:id="@+id/lastupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="start|center_horizontal"
            android:padding="3dp"

            android:text="@string/mowazi_lastupdate"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small" />

        <ImageView
            android:id="@+id/ivmodification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/updownempty"
            android:tag="desc"
            android:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llforbid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.7"
        android:clickable="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/forbid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/mowazi_forbid"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small" />

        <ImageView
            android:id="@+id/ivbid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrowdown"
            android:tint="@color/white"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llissue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.7"
        android:clickable="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/untransformd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5"
            android:gravity="start|center_horizontal"
            android:text="@string/mowazi_untransformed"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small" />

        <ImageView
            android:id="@+id/ivissue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="right"
            android:src="@drawable/arrowdown"
            android:tint="@color/white"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llsector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.7"
        android:clickable="true"
        android:padding="5dp">

        <TextView
            android:id="@+id/companySector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.4"
            android:gravity="start"
            android:padding="3dp"
            android:text="@string/sector"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small" />

        <ImageView
            android:id="@+id/ivsector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:gravity="end"
            android:src="@drawable/updownempty"
            android:tag="desc"
            android:tint="@color/white" />
    </LinearLayout>

</LinearLayout>