<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorLight">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btClose"
                android:layout_width="@dimen/settings_row_height"
                android:layout_height="@dimen/trades_ticker_height"
                android:layout_gravity="end"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="20sp"
                android:background="?attr/colorDark"
                android:text="@string/close"
                android:textColor="?attr/colorLight" />


            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:text="@string/registerOnAlMowazi"
                android:textColor="?attr/colorDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTradingNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginStart="30sp"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/edittext_border"
                android:hint="@string/trading_number"
                android:inputType="numberSigned"
                android:padding="5dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/edittext_border"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/edittext_border"
                android:hint="@string/first_name"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/edittext_border"
                android:hint="@string/last_name"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/edittext_border"
                android:hint="@string/mobile_number"
                android:inputType="phone"
                android:padding="5dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginBottom="20sp"
                android:gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="?attr/colorDark"
                    android:gravity="center"
                    android:text="@string/termAndcondition"
                    android:textColor="?attr/colorValues"
                    android:textSize="@dimen/small" />

                <TextView
                    android:id="@+id/tv_view_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="@string/opentermAndcondition"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/small"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/btSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="60sp"
                android:background="?attr/colorDark"
                android:padding="@dimen/mini_padding"
                android:text="@string/submit"
                android:textColor="?attr/colorLight" />


            <!--android:onClick="submitRegisterViaMowazi"-->

        </LinearLayout>

    </ScrollView>

</LinearLayout>