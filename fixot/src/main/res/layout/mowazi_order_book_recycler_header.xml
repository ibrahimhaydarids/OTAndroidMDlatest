<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mowazi_dark_blue"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llcompany"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.9"
        android:clickable="true">

        <TextView
            android:id="@+id/tvCompanyHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.9"
            android:gravity="start|center_vertical"
            android:text="@string/mowazi_company"
            android:textColor="@color/white"
            android:textSize="@dimen/small" />

        <ImageView
            android:id="@+id/ivcompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/updownempty"
            android:tag="desc"
            android:tint="@color/white" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvOrderBidQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.8"

        android:gravity="center"
        android:maxLines="2"
        android:padding="7dp"
        android:text="@string/mowazi_bid_quantity_title"
        android:textColor="@color/white"
        android:textSize="@dimen/small" />


    <TextView
        android:id="@+id/tvOrderBidPrice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:gravity="center|center_vertical"
        android:maxLines="2"
        android:text="@string/mowazi_last_bidprice"
        android:textColor="@color/white"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/tvOrderAskPrice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.6"
        android:gravity="center|center_vertical"
        android:maxLines="2"
        android:padding="7dp"
        android:text="@string/mowazi_last_askprice"
        android:textColor="@color/white"
        android:textSize="@dimen/small" />


    <TextView
        android:id="@+id/tvOrderAskQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.9"
        android:gravity="center|center_vertical"
        android:padding="3dp"
        android:text="@string/mowazi_ask_quantity_title"
        android:textColor="@color/white"
        android:textSize="@dimen/small" />


    <TextView
        android:id="@+id/tvCompanyOrderBook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.1"
        android:clickable="true"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/small" />


</LinearLayout>